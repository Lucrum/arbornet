<div class="comments-wrapper">
  <%# this is to compensate for the "fake" comment generated by the comment form %>
  <% valid_comments = commentable.comments.where.not(id: nil) %>
<h4>Comments</h4>
  <ol id="comments">
    <% if valid_comments.any? %>
      <% valid_comments.reverse_each do |comment| %>
        <li class="comment">
          <%= render "comments/comment", comment: comment, commentable: commentable %>
        </li>
      <% end %>
    <% else %>
      <p>Nothing to see here... yet!</p>
    <% end %>
  </ol>
</div>