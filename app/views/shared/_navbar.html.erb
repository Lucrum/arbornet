<div class="navbar">
  <h1 class="logo"><%= link_to "Arbornet", root_path %></h1>

  <% if user_signed_in? %>
    <%= link_to image_tag("icons/bell.svg", alt: "Notifications", class: "small-icon"),
        notifications_path %>
    <%= link_to current_user.username, profile_path(username: current_user.username) %>
    <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete } %>
  <% end %>
</div>

<div class="notices">
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
</div>