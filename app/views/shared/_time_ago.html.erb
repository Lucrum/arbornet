<% time_diff = Time.now - item.created_at %>
<% if time_diff / (60 * 60) > 24 %>
  <%= item.created_at.strftime("%b %-e, %Y") %>
<% elsif time_diff / (60 * 60) > 1 %>
  <%= pluralize((time_diff / (60 * 60)).round, "hour") + " ago" %>
<% else %>
  <%= pluralize((time_diff / (60)).round, "minute") + " ago" %>
<% end %>